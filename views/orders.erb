<%= erb :admin_header %>
<!-- automatically refreshes the page to update orders -->
<meta http-equiv="refresh" content="60">
<main>
    <% if session[:sheffieldAdmin] %>
        <table  id="different">
            <caption>Sheffield Users</caption>
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Order Description</th>
                <th>Order Status</th>
                <th>Special Offer</th>
            </tr> 
            
            <% @sheffieldOrders.each do |record| %>
            
            <% if record[4] != 4 %>
            <div style="overflow-x:auto;">
            <tr>
                <td><%=h record[0] %></td> 
                <td><%=h record[2] %></td> 
                <td><%=h record[3] %></td>
                <td>       
                    <form action='/statusChange' method="POST" name="statusChange" id="statusChange<%=h record[0] %>"> 
                        <div><input type="text" id="hidden" name="orderID" value=<%=h record[0] %>></div>
                        <button type="submit" form="statusChange<%=h record[0] %>" value="Submit">
                            <% if record[4] == 1 %>
                                Accept Order
                            <% elsif record[4] == 2 %> 
                                Finish Order 
                            <% elsif record[4] == 3 %>
                                Remove Order
                            <% end %>
                        </button>
                    </form> 
                </td>
                <td><%=h record[5] %></td>
                <td>
                    <form action='/deleteOrder' method="POST" name="deleteOrder" id="deleteOrder<%=h record[0] %>"> 
                        <div><input type="text" name="optionalReply" placeholder="Optional Reply"></div>
                        <div><input type="text" id="hidden" name="orderID" value=<%=h record[0] %>></div>
                        <button type="submit" form="deleteOrder<%=h record[0] %>" value="Submit">
                            Delete Order
                        </button>
                    </form> 
                </td>
            </tr>
            </div>    
            <% end %>
            <% end %>
        </table>
    <% end %>
